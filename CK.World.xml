  <Artifacts>
    <SourceFeeds>     
      <Feed Type="NuGet" Name="NuGet" Url="https://api.nuget.org/v3/index.json"/>
      <Feed Type="NuGet" Name="Signature-OpenSource" Url="https://pkgs.dev.azure.com/Signature-OpenSource/Feeds/_packaging/NetCore3/nuget/v3/index.json"/>
      <Feed Type="NPM" Scope="@signature" Url="https://pkgs.dev.azure.com/Signature-OpenSource/Feeds/_packaging/NetCore3/nuget/v3/index.json"/>
    </SourceFeeds>

    <TargetRepositories>
      <Repository Type="NuGetAzure" Organization="Signature-OpenSource" FeedName="NetCore3" ProjectName="Feeds"
              CheckName="NuGet:Azure:Signature-OpenSource-NetCore3"
              CheckSecretKeyName="AZURE_FEED_SIGNATURE_OPENSOURCE_PAT" />   
      <Repository Type="NuGetStandard" Name="nuget.org" Url="https://api.nuget.org/v3/index.json"
              CheckName="NuGet:nuget.org"
              QualityFilter="ReleaseCandidate-Release"
              SecretKeyName="NUGET_ORG_PUSH_API_KEY" />     
      <Repository Type="NPMAzure" Organization="Signature-OpenSource" FeedName="NetCore3" ProjectName="Feeds" NPMScope="@signature"
              CheckName="NPM:Azure:@signature->Signature-OpenSource-NetCore3"
              CheckSecretKeyName="AZURE_FEED_SIGNATURE_OPENSOURCE_PAT" />
      <Repository Type="NPMStandard" Name="npmjs.org" Url="https://registry.npmjs.org/"
              QualityFilter="ReleaseCandidate-Release"
              CheckName="NPM:npmjs.org"
              SecretKeyName="NPMJS_ORG_PUSH_PAT" />
      <Repository Type="CKSetup" CheckName="CKSetup:Public"
              CheckSecretKeyName="CKSETUPREMOTESTORE_PUSH_API_KEY" />
    </TargetRepositories>
  </Artifacts>

  <SharedSolutionSpec>
    <RemoveNuGetSourceNames>
