      <add Name="NuGet:Azure:Signature-OpenSource-NetCore3" />
      <add Name="NPM:Azure:@signature->Signature-OpenSource-NetCore3" />
      <add Name="NPM:npmjs.org" />
      <add Name="CKSetup:Public" />
    </ArtifactTargets>
  </SharedSolutionSpec>
  
